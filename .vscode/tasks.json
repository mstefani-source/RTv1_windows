{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\MGW\\mingw64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\*.c",
                "${workspaceFolder}\\mlsdl\\*.c",
                "${workspaceFolder}\\libft\\*.c",
                "-IC:\\MGW\\mingw64\\x86_64-w64-mingw32\\include",
                "-LC:\\MGW\\mingw64\\x86_64-w64-mingw32\\lib",
                "-Wall",
                "-lmingw32", 
                "-lSDL2main", 
                "-lSDL2",
                "-lopengl32",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}